<div class="property-main-photo">
  <div class="photo-overlay">
  <%= property_image(@property) %>
  </div>
</div>  

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2 mb-3"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %></p>
        </div>
        <div class="col-lg-6 text-center">
          <div class="row mr-lg-3 mt-sm-3 bg-light p-3">
            <div class="col-4">
              <p class="mb-0"><strong>Rooms</strong></p>
              <span class="lead"><%= @property.rooms %></span>
            </div>  
            <div class="col-4">
              <p class="mb-0"><strong>Parking</strong></p>
              <%# <i class="fa fa-car"></i> %>
              <span class="lead"><%= @property.parking_spaces %></span>
            </div> 
          </div>   
        </div>
      </div>
      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <strong><%= link_to "Est. Monthly Repayments of #{ number_to_currency((@property.price) - (@property.price * 0.1) / 360, precision: 0) } *", "#", class: "text-success" %></strong>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I affrod this property?", "#", class: "text-success" %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>

          <div id="prop-details" class="mb-3">
            <%= simple_format @property.details %>
          </div>

          <button class="btn btn-outline-info" id="propertyDetails">Show more</button>

          <p class="mt-5">* This rate is based on a 30 year mortgage, after paying an initial 10% down payments. Shorter term mortages would requir a higher monthly repayments.</p>

        </div>  
      </div>
    </div>    
    <div class="col-4 md-4">
      <%= render "properties/user_details", user: @user %>
    </div> 
  </div>    
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <%= render "properties/list", properties: @user_properties %>
    </div>
  </div>    
</section>

<script>
  PropertyDetails()
</script>