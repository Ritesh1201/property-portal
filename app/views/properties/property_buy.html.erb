<h1 class="h3">Self Owned Properties.</h1> 
<p class="mt-3">No. Of Properties Owned:<%= @properties.count %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.rooms %></td>
        <td><%= link_to 'Show', property %></td>
      </tr>
    <% end %>
  </tbody>
</table>
